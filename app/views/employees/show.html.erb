<p id="notice"><%= notice %></p>

<div id="employee_details">
<h1><%= t('.title')%></h1>
<div class="hr1">
	<hr/>
</div>
<br/><br/>

<table>
	<tr class="odd">
		<td class="column1"><%= t('.name')%>:</td>
  		<td><%= @employee. name %></td>
	</tr>

	<tr>
  		<td class="column1"><%= t('.dob')%>:</td>
  		<td><%= @employee.dob %></td>
	</tr>

	<tr class="odd">
  		<td class="column1"><%= t('.salary')%>:</td>
  		<td><%= number_to_currency(@employee.salary) %></td>
	</tr>

	<tr>
  		<td class="column1"><%= t('.job')%>:</td>
  		<td><%= @employee.job %></td>
	</tr>

	<tr class="odd">
  		<td class="column1"><%= t('.notes')%>:</td>
  		<td><%= @employee.notes %></td>
	</tr>
	
	<% if @project != nil %>
	<tr>
		<td class="column1"><%= t('.work_at')%>: </td>
		<td> <%= @project.name %> </td>
	</tr>
	<% end%>
	<tr>
		<td colspan='2'>
		<%= link_to t('.edit'), edit_employee_path(@employee) %> |
		<%= link_to t('.back'), employees_path %></td>
	</tr>
</table>


</div>