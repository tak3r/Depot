<div id='timesheet'>
<h2>Time sheet</h2>
<p>Start Date : <%= @start_date %></p>

	<table>
		<tr>
			<th class="top">No.</th>
			<th class="top">Name</th>
			<th class="top">Job</th>
			<th colspan='7'>Timesheet</th>
			<th class="top">Total day</th>
			<th class="top">Salary</th>
			<th class="top">Total salary</th>
		</tr>
		<tr>
			<th class="middle"></th>
			<th class="middle"></th>
			<th class="middle"></th>
				<% (0..6).each do |n| 
					current_date =  @start_date + n %>
			<th> <%= current_date.strftime("%d")%> </th>
				<% end %>
			<th class="middle"></th>
			<th class="middle"></th>
			<th class="middle"></th>
		</tr>
		<tr>
			<th class="bottom"></th>
			<th class="bottom"></th>
			<th class="bottom"></th>
				<% (0..6).each do |n| 
					current_date =  @start_date + n %>
			<th> <%= current_date.strftime("%a")%> </th>
				<% end %>
			<th class="bottom"></th>
			<th class="bottom"></th>
			<th class="bottom"></th>
		</tr>
		<% counter = 1
		   @employees.each do |employee| %>
		<tr>
			<td class='center-align'><%= counter %></td>
			<td><%= employee.name %></td>
			<td><%= employee.job %></td>
				<% (0..6).each do |n| 
					current_date = @start_date + n 
					checkbox_id = employee.id.to_s + ":" + current_date.to_s %>
			<td><%= check_box_tag checkbox_id, 'selected', false, { :onchange => "updateTable('" + checkbox_id + "', '" + employee.salary.to_s + "');"} %> 
				<% end %>
			<td class='center-align'><%= text_field_tag employee.id.to_s + ":tot_day", 0 , { :readonly => true }%></td>
			<td class='center-align'><%= number_to_currency(employee.salary) %></td>
			<td class='center-align'>$<%= text_field_tag employee.id.to_s + ":tot_sal", 0, { :readonly => true }%></td>
		</tr>
		<%  	counter += 1
			end %>
		<tr>
			<td class='footer' colspan='12' style='text-align:right;'>Total</td>
			<td class='footer'>$<%= text_field_tag "grand_total", 0, { :readonly => true }%>
		</tr>
	</table>
</div>
