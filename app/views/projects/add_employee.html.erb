<p id="notice"><%= notice %></p>

<h1> <%= @project.name %> </h1>
<div class="hr1">
	<hr/>
</div>
<br/><br/>

<%= form_tag('update_employee') do %>
	<table>
		<% @employees.each do |employee| %>
		<tr>
			<td>
				<% if(employee.project_id == @project.id) %>
			   		<%= check_box_tag employee.id, 'selected', true %>
				<% else %>
					<%= check_box_tag employee.id, 'selected' %>
				<% end %>
			</td>
			<td>
				<%= link_to employee.name, employee %> <br/>
			</td>
		</tr>	
		<% end %>
	</table>
	<p><%= will_paginate @employees %></p>
	<p><%= submit_tag 'Save'%></p>
<% end%>

<%= link_to t('.back'), project_path %> |
<%= link_to t('.new'), { :controller => 'employees', :action => 'new', :project_id => @project.id } %>